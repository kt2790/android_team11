<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MyPageFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-51dp">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="408dp"
        android:layout_height="283dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_setting_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@drawable/gradient"
        android:id="@+id/MyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="MyName"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/Image" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Image">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="fill"
                android:id="@+id/first_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="11dp"
                        android:text="Mobile"
                        android:fontFamily="@font/bm_dohyeon"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MobileTX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="010-1234-5678"
                        android:textColor="#999999"
                        android:fontFamily="@font/bm_dohyeon"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="19sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="fill"
                android:id="@+id/second_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/first_cardview"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:cardElevation="2dp" >

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="16dp"
                        android:text="Event"
                        android:fontFamily="@font/bm_dohyeon"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/EventTx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="0dp"
                        android:background="#FFFFFF"
                        android:hint="Event State"
                        android:textColor="#999999"
                        android:fontFamily="@font/bm_dohyeon"
                        android:textSize="19sp"
                        app:layout_constraintBottom_toBottomOf="@+id/Event"
                        app:layout_constraintHorizontal_bias="0.172"
                        app:layout_constraintStart_toStartOf="@+id/Event" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="fill"
                android:id="@+id/third_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/second_cardview"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="6dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="#FFFFFF"
                        android:paddingStart="10dp"
                        android:paddingEnd="16dp"
                        android:text="Email"
                        android:fontFamily="@font/bm_dohyeon"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.95"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Event" />


                    <TextView
                        android:id="@+id/EmailTx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="0dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/bm_dohyeon"
                        android:hint="test1@gmail.com"
                        android:textColor="#999999"
                        android:textSize="19sp"
                        app:layout_constraintBottom_toBottomOf="@+id/Email"
                        app:layout_constraintEnd_toEndOf="@+id/Email"
                        app:layout_constraintStart_toStartOf="@+id/Email" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:paddingBottom="150dp"
                android:text=""
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/third_cardview" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
